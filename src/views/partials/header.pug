header
    a(href="/").header__logo
        i.fab.fa-youtube
        span.header__title Woohyun
    nav
        ul 
            li 
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/users/edit") Edit Profile
                li
                    a(href="/users/logout") Log Out
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl == "noImg"
                            div.no__header__avatar
                                i.fas.fa-user
                        else
                            if loggedInUser.socialOnly
                                img.header__avatar(src=loggedInUser.avatarUrl  crossorigin)
                            else
                                img.header__avatar(src=loggedInUser.avatarUrl  crossorigin)
                
            else
                li 
                    a(href="/login") Log In
                li 
                    a(href="/join").header__btn Join
                
            